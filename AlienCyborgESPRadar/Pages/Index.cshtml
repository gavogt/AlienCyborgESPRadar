@page

@{
    Layout = "_Layout";
}

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="py-5">
    <div class="container">
        <div class="p-4 p-md-5 rounded-4 shadow-sm bg-dark">
            <h1 class="display-6 mb-2">Radar Dashboard</h1>
            <p class="text-muted mb-0">Live motion events from your RCWL nodes.</p>
        </div>
    </div>
    <div class="row g-3 mt-3" id="radarGrid">
        <!-- Cards inserted by JS -->
    </div>

    <div class="mt-4 p-3 rounded-4 border bg-black">
        <div class="d-flex align-items-center justify-content-between">
            <h2 class="h5 mb-0">Activity</h2>
            <button class="btn btn-sm btn-outline-secondary" id="clearLog">Clear</button>
        </div>
        <div class="mt-2 small text-muted" id="log"></div>
    </div>
</section>